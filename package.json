{
  "name": "dockforge",
  "displayName": "DockForge",
  "description": "A VS Code extension for Docker and DevContainer management with React + Vite and the Webview UI Toolkit.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.75.0"
  },
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "dockforge",
          "title": "DockForge",
          "icon": "assets/example-logo.png"
        }
      ]
    },

    "views": {
      "dockforge": [
        {
          "id": "dockforge-dockerfilesview",
          "name": "Build Dockerfiles"
        },
        {
          "id": "dockforge-dockerhub",
          "name": "Docker Hub"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "dockforge-dockerhub",
        "contents": "Welcome to Docker Hub!\nLogin to pull and push private images from Docker Hub.\n\n[Sign In](command:dockforge.showDockerHub)\n[Sign Up](https://hub.docker.com/signup)",
        "when": "true"
      },
      {
        "view": "dockforge-dockerfilesview",
        "contents": "Welcome to DockForge!\nStart building your Dockerfiles.\n\n[$(add) Create New Dockerfile](command:dockforge.newDockerfile)\n\n[$(refresh) Refresh View](command:dockforge.refreshDockerfiles)"
      }
    ],
    "viewsWelcome": [
      
    ],
    "commands": [
      {
        "command": "dockforge.openDockerfileBuilder",
        "title": "DockForge: Open Dockerfile Builder"
      },
      {
        "command": "dockforge.refreshDockerfiles",
        "title": "Refresh Dockerfiles",
        "icon": "$(refresh)"
      },
      {
        "command": "dockforge.newDockerfile",
        "title": "DockForge: Create New Dockerfile",
        "icon": "$(add)"
      },
      {
        "command": "dockforge.deleteDockerfile",
        "title": "DockForge: Delete Dockerfile",
        "icon": "$(trash)"
      },
      {
        "command": "dockforge.showDockForge",
        "title": "DockForge: Show"
      },
      {
        "command": "dockforge.openSignIn",
        "title": "DockForge: Open Sign In"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "dockforge.refreshDockerfiles",
          "when": "view == dockforge-dockerfilesview",
          "group": "navigation"
        },
        {
          "command": "dockforge.newDockerfile",
          "when": "view == dockforge-dockerfilesview",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "dockforge.deleteDockerfile",
          "when": "view == dockforge-dockerfilesview && viewItem == dockerfileItem",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "install:all": "npm install && cd webview-ui && npm install",
    "start:webview": "cd webview-ui && npm run start",
    "build:webview": "cd webview-ui && npm run build",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.46.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "prettier": "^2.2.1",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  }
}
